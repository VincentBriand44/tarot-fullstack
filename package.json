{
  "name": "tarot-fullstack",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "compose:up": "docker compose up -d",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "pm2:prod": "pm2 start ecosystem.config.json --env production",
    "pm2:logs": "pm2 logs --lines 100 tarot",
    "pm2:monit": "pm2 monit",
    "prod": "yarn run compose:up && wait-on tcp:5432 && yarn run prisma:deploy && yarn run build && yarn run pm2:prod"
  },
  "devDependencies": {
    "@faker-js/faker": "7.6.0",
    "@sveltejs/adapter-node": "1.2.4",
    "@sveltejs/kit": "1.16.3",
    "@types/node": "20.1.2",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "autoprefixer": "10.4.14",
    "commitizen": "4.3.0",
    "cz-emoji": "1.3.2-canary.2",
    "eslint": "8.40.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-svelte3": "4.0.0",
    "pm2-config": "0.0.8",
    "postcss": "8.4.23",
    "prettier": "2.8.8",
    "prettier-plugin-svelte": "2.10.0",
    "prisma": "4.14.0",
    "svelte": "3.59.1",
    "svelte-check": "3.3.2",
    "tailwindcss": "3.3.2",
    "ts-node": "10.9.1",
    "tslib": "2.5.0",
    "typescript": "5.0.4",
    "vite": "4.3.5"
  },
  "type": "module",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    },
    "cz-emoji": {
      "skipQuestions": [
        "scope",
        "body",
        "breaking"
      ]
    }
  },
  "dependencies": {
    "@prisma/client": "4.14.0",
    "wait-on": "^7.0.1"
  },
  "prisma": {
    "seed": "ts-node --esm prisma/seed.ts"
  }
}
